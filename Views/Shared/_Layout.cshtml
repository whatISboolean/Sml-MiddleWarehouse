<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/fontawesome.css" rel="stylesheet" />
    <link href="~/Content/fontawesome.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome-all.css" rel="stylesheet" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/css/site.css" rel="stylesheet" />
</head>
<body>
    <header class="d-print-none">
        <nav class="navbar navbar-expand-lg navbar-dark navbar-custom p-0">
            <div class="container-fluid">
                <a class="navbar-brand text-white mx-3" asp-area="" asp-page="/Index">SML</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item fixmenu">
                            <a class="nav-link"><i class="bi bi-house" style="color:deepskyblue"></i>&nbsp; Home</a>
                        </li>
                        <li class="nav-item fixmenu">
                            <a class="nav-link"><i class="bi bi-file-text" style="color:turquoise"></i>&nbsp; Record</a>
                        </li>
                        <li class="nav-item fixmenu">
                            <a class="nav-link"><i class="bi bi-eyedropper text-warning"></i>&nbsp; Ratio</a>
                        </li>
                        <li class="nav-item fixmenu">
                            <a class="nav-link"><i class="bi bi-exclamation-circle" style="color:orangered"></i>&nbsp; Abnormal</a>
                        </li>
                        <li class="nav-item fixmenu">
                            <a class="nav-link"><i class="bi bi-printer" style="color:orange"></i>&nbsp; Label</a>
                        </li>
                        <li class="nav-item fixmenu">
                            <a class="nav-link"><i class="bi bi-box-seam" style="color:greenyellow"></i>&nbsp; Materials</a>
                        </li>
                        <li class="nav-item fixmenu">
                            <a class="nav-link"><i class="bi bi-stopwatch" style="color:#c6e5ff"></i>&nbsp; Time Limit</a>
                        </li>
                        <li class="nav-item fixmenu">
                            <a class="nav-link"><i class="bi bi-file-ppt-fill" style="color:#ddbdff"></i>&nbsp; Pilot</a>
                        </li>
                        <li class="nav-item fixmenu">
                            <a class="nav-link"><i class="bi bi-file-earmark-text" style="color:#ff0000"></i>&nbsp; Error Log</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {

                            <li class="nav-item fixmenu">
                                <a class="nav-link" asp-area="" asp-page="/Settings"><i class="bi bi-gear text-light"></i>&nbsp; Settings</a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/umd/popper.min.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    <script>
        $(document).ready(function () {
            $('[data-bs-toggle="tooltip"]').tooltip()
        });
    </script>


    @RenderSection("scripts", required: false)
</body>
</html>
